  const menuItems: MenuProps['items'] = [
    {
      key: 'dashboard',
      icon: <DashboardOutlined />, 
      label: t('dashboard'),
      onClick: () => {
        setActiveTab('dashboard');
        navigate('/dashboard');
      }
    },
    ...(isDebugMode
      ? [
          {
            key: 'vehicles',
            icon: <CarOutlined />,
            label: t('vehicles'),
