{
  "name": "trackmax-app",
  "version": "1.0.0",
  "description": "TrackMax - Sistema de Rastreamento GPS",
  "type": "module",
  "scripts": {
    "dev": "refine dev",
    "start": "refine start",
    "build": "tsc && refine build",
    "build:firebase": "tsc && refine build && npm run copy-manifest",
    "copy-manifest": "cp public/manifest.json dist/",
    "deploy": "npm run build:firebase && firebase deploy",
    "deploy:hosting": "npm run build:firebase && firebase deploy --only hosting",
    "firebase:init": "firebase init hosting",
    "refine": "refine"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@ant-design/icons": "^5.1.1",
    "@refinedev/antd": "latest",
    "@refinedev/cli": "latest",
    "@refinedev/core": "latest",
    "@refinedev/graphql": "^7.1.1",
    "@refinedev/react-router": "latest",
    "@refinedev/simple-rest": "latest",
    "@types/leaflet": "^1.9.20",
    "@uiw/react-md-editor": "latest",
    "antd": "^5.17.0",
    "dayjs": "^1.11.11",
    "firebase": "^12.4.0",
    "leaflet": "^1.9.4",
    "query-string": "^7.1.1",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-leaflet": "^4.2.1",
    "react-router": "^7"
  },
  "devDependencies": {
    "@types/node": "20.17.17",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@vitejs/plugin-react": "^4.4.1",
    "typescript": "^5.8.2",
    "vite": "6.3.5",
    "vite-tsconfig-paths": "^5.0.0"
  }
}
